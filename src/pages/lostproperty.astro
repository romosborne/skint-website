<Layout title={'Lost Property'}>
  <p>
    Every year at Skint a few things get left behind. If you recognise anything
    please let us know and we can try and reunite them with their owners.
  </p>
  <div class="row row-cols-1 row-cols-sm-2 py-3">
    {
      imgs.map((img, index) => (
        <div class="col">
          <div class="card m-2">
            <img src={img} class="card-img-top" />
            <div class="card-body">
              <h5 class="card-title">{index + 1}</h5>
            </div>
          </div>
        </div>
      ))
